.img-container
  width: 100%
  height: 100%
  position: relative
  font-size: 0
  border: 1px solid #ccc
  box-shadow: #ccc .05rem .05rem .07rem 0rem
  margin-top: .1rem
  img
    opacity: 1
    transition: opacity .3s
    width: 100%
  img.hidden
    visibility: hidden
    transition: opacity .3s
    opacity: 0
  .loading
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: linear-gradient(-135deg,#f2f2f2 25%,#e6e6e6 37%,#f2f2f2 63%)
    background-size: 400% 100%
    animation: background-loading 1.4s ease infinite

@keyframes background-loading {
  0% {background-position: -100% 50%}
  100% {background-position: 0 50%}
}